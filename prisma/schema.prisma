generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PRISMA_DATABASE_URL")
}

model Node {
  id        String   @id @default(uuid())
  type      String
  position  Json
  data      Json
}

model Edge {
  id        String   @id @default(uuid())
  source    String
  target    String
}

model Mindmap {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime? @updatedAt
  schema    Json
}
